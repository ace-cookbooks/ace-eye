<% node['eye']['require'].each do |r| -%>
require <%= r %>
<% end -%>

Eye.config do
  logger '<%= @log_file %>'
  <% node['eye']['global'].each do |k,v| -%>
    <% if k == 'contacts' -%>
      <% v.each do |contact, opts| -%>
<%= "contact(#{contact}, *#{opts})" %>
      <% end -%>
    <% else -%>
<%= "#{k}(#{v})" %>
    <% end -%>
  <% end -%>
end
